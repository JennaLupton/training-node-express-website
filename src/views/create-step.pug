extends layout.pug

block header
  title Create Recipe Step

block content
  .py-3.text-center
    h2.bd-title Add a Step for #{recipe.title}
  .row
    form.w-100.needs-validation(method='post')
      .mb-3
        label(for='step-number') Step Number
        input.form-control(type='text' id='step-number' name='step_number')
      .mb-3
        label(for='step-text') Step Text
        textarea.form-control(id='step-text' name='step_text' rows='3' columns='30')
      input.btn.btn-primary.btn-lg(type='submit', value='Save')